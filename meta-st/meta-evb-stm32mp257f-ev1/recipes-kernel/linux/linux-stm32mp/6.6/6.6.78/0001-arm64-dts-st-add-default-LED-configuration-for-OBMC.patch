Subject: [PATCH 1/3] arm64: dts: st: add default LED configuration for OBMC

Upstream-Status: Inappropriate [Specific configuration]

Change-Id: I9a6ac0e705371fee8b69da4ced174a482fcdec88
---
 arch/arm64/boot/dts/st/stm32mp257f-ev1.dts | 16 ++++++++++------
 1 file changed, 10 insertions(+), 6 deletions(-)

diff --git a/arch/arm64/boot/dts/st/stm32mp257f-ev1.dts b/arch/arm64/boot/dts/st/stm32mp257f-ev1.dts
index 8a240acbe00b..42c99efa798c 100644
--- a/arch/arm64/boot/dts/st/stm32mp257f-ev1.dts
+++ b/arch/arm64/boot/dts/st/stm32mp257f-ev1.dts
@@ -91,12 +91,16 @@ button-wake-up {
 	gpio-leds {
 		compatible = "gpio-leds";
 
-		led-blue {
-			function = LED_FUNCTION_HEARTBEAT;
-			color = <LED_COLOR_ID_BLUE>;
-			gpios = <&gpioj 7 GPIO_ACTIVE_HIGH>;
-			linux,default-trigger = "heartbeat";
-			default-state = "off";
+		fault {
+			gpios = <&gpioj 7 GPIO_ACTIVE_HIGH>; /*blue*/
+		};
+
+		identify {
+			gpios = <&gpioj 6 GPIO_ACTIVE_HIGH>; /*orange*/
+		};
+
+		power {
+			gpios = <&gpiod 8 GPIO_ACTIVE_HIGH>; /*green*/
 		};
 	};
 
