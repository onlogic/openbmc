Subject: [PATCH 1/3] arm64: dts: st: add default LED configuration for OBMC DK

Upstream-Status: Inappropriate [Specific configuration]

Change-Id: I7381a1bf1dde652b4b9b55b047331d8a5ef7ddb1
---
 arch/arm64/boot/dts/st/stm32mp257f-dk.dts | 16 ++++++++++------
 1 file changed, 10 insertions(+), 6 deletions(-)

diff --git a/arch/arm64/boot/dts/st/stm32mp257f-dk.dts b/arch/arm64/boot/dts/st/stm32mp257f-dk.dts
index 88bafebefe06..afa496cba944 100644
--- a/arch/arm64/boot/dts/st/stm32mp257f-dk.dts
+++ b/arch/arm64/boot/dts/st/stm32mp257f-dk.dts
@@ -112,12 +112,16 @@ button-wake-up {
 	gpio-leds {
 		compatible = "gpio-leds";
 
-		led-blue {
-			function = LED_FUNCTION_HEARTBEAT;
-			color = <LED_COLOR_ID_BLUE>;
-			gpios = <&gpioh 7 GPIO_ACTIVE_HIGH>;
-			linux,default-trigger = "heartbeat";
-			default-state = "off";
+		fault {
+			gpios = <&gpioh 7 GPIO_ACTIVE_HIGH>; /*blue*/
+		};
+
+		identify {
+			gpios = <&gpioh 6 GPIO_ACTIVE_HIGH>; /*orange*/
+		};
+
+		power {
+			gpios = <&gpioh 5 GPIO_ACTIVE_HIGH>; /*green*/
 		};
 	};
 
